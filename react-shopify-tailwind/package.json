{
  "name": "shop_tailwind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@firebase/storage": "^0.3.41",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "chokidar-cli": "^2.1.0",
    "firebase": "^7.17.2",
    "lodash-es": "^4.17.11",
    "material-design-icons": "^3.0.1",
    "next": "^9.5.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-spring": "^9.0.0-beta.3",
    "react-use-gesture": "^5.0.0",
    "scroll-snap": "^3.0.2",
    "tailwindcss": "^1.6.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/tailwind.css -o src/tailwind.output.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",    "start:react": "react-scripts start",
    "prebuild": "run-s build:tailwind",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build" : "next build ./src",
    "start" :  "npm-run-all build:tailwind --parallel watch:tailwind start:next",
    "dev" : "next ./src",
    "start:next" : "next start ./src"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
